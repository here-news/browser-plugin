

{
    "manifest_version": 3,
    "name": "Related News",
    "version": "0.0.1",
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_icon": {
            "16": "img/cool.png"
        },
        "default_popup": "popup.html"
    },
    "options_page": "options.html",
    "content_scripts": [
        {
            "matches": ["http://*/*", "https://*/*"],
            "js": [
                "content.js"
            ]
        }
    ],
    "permissions": [
        "tabs",
        "scripting",
        "activeTab",
        "storage"
        ],
    "host_permissions": [
        "*://*/*",     "https://api.here.news/*"

    ]
}
